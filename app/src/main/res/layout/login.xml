<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/goToRegisterPage"
            android:fillViewport="true">


            <RelativeLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="60dp"
                        android:background="@drawable/corner_white"
                        android:backgroundTint="@android:color/white"
                        android:drawableEnd="@drawable/ic_person_blue"
                        android:gravity="center"
                        android:hint="شماره موبایل"
                        android:inputType="phone"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_medium" />


                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="60dp"
                        android:background="@drawable/corner_white"
                        android:backgroundTint="@android:color/white"
                        android:drawableEnd="@drawable/ic_lock_green"
                        android:gravity="center"
                        android:hint="رمز عبور"
                        android:inputType="textPassword"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_medium" />


                    <TextView
                        android:id="@+id/forgetPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="کلمه عبور خود را فراموش کرده اید؟"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size_medium" />

                    <RelativeLayout
                        android:id="@+id/cv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="50dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <Button
                            android:id="@+id/loginBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/login_gradiant_btn2"
                            android:paddingLeft="54dp"
                            android:paddingRight="54dp"
                            android:text="ورود"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_medium" />

                        <ProgressBar
                            android:id="@+id/progress"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:visibility="gone"
                            android:layout_alignTop="@+id/loginBtn"
                            android:layout_alignBottom="@+id/loginBtn"
                            android:layout_alignLeft="@+id/loginBtn"
                            android:layout_centerHorizontal="true"
                            app:backgroundTint="@color/colorPrimary"
                            app:backgroundTintMode="src_in" />

                    </RelativeLayout>

                </LinearLayout>


            </RelativeLayout>


        </ScrollView>

        <LinearLayout
            android:id="@+id/goToRegisterPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="ثبت نام کنید"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/asd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="اکانت کاربری ندارید؟ "
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>


    </RelativeLayout>
</layout>