<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/corner_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/CT7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_blue_top_side"
        android:gravity="right"
        android:paddingTop="5dp"
        android:paddingRight="8dp"
        android:paddingBottom="5dp"
        android:text="بازیابی رمز عبور"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:text="برای بازیابی رمز عبور خود , لطفا شماره تلفن خود را در کادر زیر وارد کنید و منتظر دریافت کد تایید بمانید"
        android:textSize="@dimen/text_size_medium" />

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/corner_gray"
        android:gravity="center"
        android:hint="موبایل"
        android:inputType="text"
        android:paddingTop="5dp"
        android:paddingBottom="4dp"
        android:textSize="@dimen/text_size_medium" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/corner_blue_bottom_side"
            android:gravity="center"
            android:padding="8dp"
            android:text="تایید"
            android:textColor="@android:color/white" />

        <ProgressBar
            android:id="@+id/dialogProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/ok"
            android:layout_alignBottom="@+id/ok"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>