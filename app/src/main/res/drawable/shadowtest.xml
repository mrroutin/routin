<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!--Shadow -->
            <item>
                <shape>
                    <solid android:color="#311F43"/>
                    <corners android:radius="20dp"/>
                </shape>
            </item>
            <!-- First position of the button -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="1dp"/>
                    <gradient
                        android:startColor="#DADCDD"
                        android:endColor="#D5D5D5"
                        android:angle="270" />
                    <corners
                        android:radius="19dp"/>
                    <padding
                        android:left="5dp"
                        android:top="5dp"
                        android:right="5dp"
                        android:bottom="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- سایه -->
            <item>
                <shape>
                    <solid android:color="#102746"/>
                    <corners android:radius="15dp"/>
                </shape>
            </item>
            <!-- نمایش بعد از کلیک -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:endColor="#E3735D"
                        android:startColor="#ff785b"
                        android:angle="270" />
                    <corners
                        android:radius="15dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>